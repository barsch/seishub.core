<h1>Indexes</h1>

<h2>Add Index</h2>
<form method="post" id="add" action="">
  <div class="field-left">
    <label>Package</label><br />
    <select name="package_id" id="package_id" onchange="changePackage('add');">
      #for $p in $packages
      #if $resourcetypes[$p]
      <option value="$p"
        #if $package_id==$p
        selected="selected"
        #end if
      >$p</option>
      #end if
      #end for
    </select>
  </div>
  <div class="field-left">
    <label>Resource Type</label><br />
    <select name="resourcetype_id" id="resourcetype_id">
      <option></option>
    </select>
  </div>
  <div class="field">
    <label>Label</label><br />
    <input type="text" size="30" name="label" value="$label" />
  </div>
  <div class="field-left">
    <label>Type</label><br />
    <select name="type_id" id="type_id">
      #for $i in $index_types:
      <option value="$i">$i</option>
      #end for
    </select><br />
  </div>
  <div class="field">
    <label>Options</label><br />
    <input type="text" size="40" name="options" value="$options" />
  </div>
  <div class="field">
    <label>XPath Expression (use # for grouping)</label><br />
    <input type="text" size="80" name="xpath" value="$xpath" />
  </div>
  <div class="button">
    <input type="submit" name="add" value="Add" />
  </div>
</form>

<br />
<br />

<h2>Overview Indexes</h2>

<form method="post" id="list" action="">
  <div class="field-left">
    <label>Package</label><br />
    <select name="package_id" id="package_id" onchange="changePackage('list');">
      #for $p in $packages
      #if $resourcetypes[$p]
      <option value="$p"
        #if $package_id==$p
        selected="selected"
        #end if
      >$p</option>
      #end if
      #end for
    </select>
  </div>
  <div class="field">
    <label>Resource Type</label><br />
    <select name="resourcetype_id" id="resourcetype_id">
      <option></option>
    </select>
  </div>
  
  <div class="button">
    <input type="submit" name="filter" value="Filter" />
    <input type="submit" name="indexview" value="Update IndexView" />
    <input type="submit" name="reindex-all" value="Reindex All" />
  </div>
  
  <br />

  <table class="list">
    <tr>
      <th></th>
      <th>Package</th>
      <th>Resource Type</th>
      <th>Label</th>
      <th>Type</th>
      <th>Options</th>
      <th>XPath</th>
      <th>Group XPath</th>
    </tr>
    #for $index in $indexes
    <tr> 
      <td>
        <input type="checkbox" name="index[]" 
               value="$index._id" />
      </td>
      <td>$index.resourcetype.package.package_id</td>
      <td>$index.resourcetype.resourcetype_id</td>
      <td>$index.label</td>
      <td>$index_types_dict.get($index.type, 'Plugin')</td>
      <td>$index.options</td>
      <td>$index.xpath</td>
      <td>$index.group_path</td>
    </tr>
    #end for
  </table>
  
  <div class="button">
    <input type="button" value="Select all" onclick="checkAllIndexes() "/> 
    <input type="button" value="Select none" onclick="uncheckAllIndexes() "/> 
    <input type="submit" name="reindex" value="Reindex" />
    <input type="submit" name="delete" value="Delete" />
  </div>
</form>


#if $packages
<script type="text/javascript">
/* <![CDATA[ */
    var resourcetypes = new Array();
    #for $p in $packages
    resourcetypes['$p'] = $resourcetypes[$p];
    #end for
    
    function changePackage(form_id)
    {
      var form = document.getElementById(form_id)
      var selectbox = form.resourcetype_id
      var package_id = form.package_id.value;
      selectbox.options.length = 0;
      for (var i=0;i<resourcetypes[package_id].length;i++)
      {
        var link = resourcetypes[package_id][i];
        var addme = new Option(link, link);
        selectbox.options[i] = addme;
        if (link=='$resourcetype_id')
        {
          selectbox.options.selectedIndex = i
        }
      }
    }
    changePackage('add');
    changePackage('list');
    
    function checkAllIndexes()
    {
      var boxes = document.getElementsByName('index[]');
      for (var i = 0; i < boxes.length; i++) 
      {
        boxes[i].checked = 1;
      }
    }
    
    function uncheckAllIndexes()
    {
      var boxes = document.getElementsByName('index[]');
      for (var i = 0; i < boxes.length; i++) 
      {
        boxes[i].checked = 0;
      }
    }
/* ]]> */
</script>
#end if