#def JAVASCRIPT
  <script type="text/javascript" src="/admin/yui/build/yahoo-dom-event/yahoo-dom-event.js"></script>
#end def JAVASCRIPT

<h1>Logs</h1>

<h2>Error Log</h2>
<textarea id="errorlog" class="log" cols="80" rows="40">
#filter WebSafe
#for $line in $errorlog#$line#end for
#end filter
</textarea>


<script type="text/javascript">
/* <![CDATA[ */

  var Event = YAHOO.util.Event;

  initPage = function() {
    var ta2 = document.getElementById('errorlog');
    ta2.scrollTop = ta2.scrollHeight;
  }
  Event.on(window,"load",initPage);

/* ]]> */
</script>