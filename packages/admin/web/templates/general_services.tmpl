<h1>Services</h1>

<form method="post" id="services" action="">
  <table class="list">
    <tr>
      <th>&nbsp;</th>
      <th>Name</th>
      <th>Port</th>
    </tr>
    #for $s in $services
    <tr>
      <td>
        <input type="checkbox" 
          #if $s.running
               checked="checked" 
          #end if 
               name="service" value="$s.name" />
      </td>
      <td>
        $s.name
      </td>
      <td>
        #if hasattr($s,'args')
          #echo $s.args[0]#
        #end if
        #if hasattr($s,'services')
        #for $ss in $s.services
          #if hasattr($ss,'args')
            #echo $ss.args[0]#<br />
          #end if
        #end for
        #end if
      </td>
    </tr>
    #end for
  </table>
  
  <div class="button">
    <input type="submit" name="reload" value="Set Services" />
    <br />
    <input type="submit" name="shutdown" value="Shutdown" />
    <input type="submit" name="restart" value="Restart" disabled="disabled"/>
  </div>
</form>

